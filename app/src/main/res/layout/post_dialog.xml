<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="#fff"
>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anything New?"
        android:textSize="25dp"
        android:padding="10dp"
        android:id="@+id/tvPostTitle"
        android:textColor="#fff"
        android:background="@color/twitterBlue"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/tweet_button"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:textColor="#fff"
        android:text="TWEET"
        android:textSize="15dp"
        android:id="@+id/tvTweetBtn"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:background="#fff"
        android:padding="10dp"
        android:layout_below="@+id/tvPostTitle"
        android:hint="What's Happening?"
        android:textColorHint="#aaa"
        android:id="@+id/etPostContent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#aaa"
        android:textSize="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/tvTextCount"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tvTweetBtn"
        android:layout_alignEnd="@+id/tvTweetBtn" />
</RelativeLayout>